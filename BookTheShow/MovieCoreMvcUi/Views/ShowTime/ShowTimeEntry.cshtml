@model BookTheShowEntity.ShowTimev
@*//this name should be the name of projects under dependencies after adding referrences in MvcUi*@


<div>
    <a asp-controller="ShowTime" asp-action="Index">Index</a>
    <hr />
</div>
<form method="post" enctype="multipart/form-data">
    <h2>Show Entry</h2>
    <div class="form-group">
        @*  form group for automatic audjustment for various screen sizes*@
        <label>Movie Id</label>
        <input type="text" asp-for="MovievId" asp-items="@ViewBag.movieresult" class="form-control" placeholder="Enter Movie Id" required />
    </div>
    <div class="form-group">
        <label>Theatre Id</label>
        <input type="text" asp-for="TheatrevId" class="form-control" placeholder="Enter Theatre Id" required />
    </div>
    <div class="form-group">
        <label>Show Time</label>
        <input type="datetime-local" asp-for="ShowTimevv" class="form-control" placeholder="Enter Show Time" required />
    </div>

    <input type="submit" value="Save" class="btn btn-outline-success" /> @*submit display message for required option required works only with submit*@
    <input type="button" value="Reset" class="btn btn-outline-secondary" />
    <hr />
    @*submit sends form to server thats why we use submit not button type  *@
    @*   by default get request is called so we have mention post in the initial stage of form which will call httppost in moviecontroller *@
    @if (ViewBag.status == "Ok")
    {
        <div class="alert alert-success">
            @ViewBag.message
        </div>
    }
    else if (ViewBag.status == "Error")
    {
        <div class="alert alert-danger">
            @ViewBag.message
        </div>
    }
</form>