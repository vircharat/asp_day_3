@model BookTheShowEntity.Userv
<div>
    <a asp-controller="User" asp-action="Index">Index</a>
    <hr />
</div>
<form method="post" enctype="multipart/form-data">

    <div class="form-group">
        @*  form group for automatic audjustment for various screen sizes*@
        <label>User Id</label>
        <input type="text" asp-for="UservId" class="form-control" placeholder="Enter User Id" required />
    </div>

    <input type="submit" value="Delete" class="btn btn-outline-success" /> @*submit display message for required option required works only with submit*@

    <hr />
    @*submit sends form to server thats why we use submit not button type  *@
    @*   by default get request is called so we have mention post in the initial stage of form which will call httppost in moviecontroller *@
    @if (ViewBag.status == "Ok")
    {
        <div class="alert alert-success">
            @ViewBag.message
        </div>
    }
    else if (ViewBag.status == "Error")
    {
        <div class="alert alert-danger">
            @ViewBag.message
        </div>
    }
</form>