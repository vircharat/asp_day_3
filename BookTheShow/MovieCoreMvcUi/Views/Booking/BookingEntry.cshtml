@model BookTheShowEntity.Booking
@*//this name should be the name of projects under dependencies after adding referrences in MvcUi*@

<div>
    <a asp-controller="Booking" asp-action="BookingEntry">Booking Entry</a>
    <hr />
</div>

<form method="post" enctype="multipart/form-data">
    <h2>Theatre Entry</h2>
    <div class="form-group">
        <label>Show Id</label>
        <input type="text" asp-for="showId" class="form-control" placeholder="Enter Show Id" required />
    </div>

    <div class="form-group">
        @*  form group for automatic audjustment for various screen sizes*@
        <label>BookingQuantity</label>
        <input type="text" asp-for="BookingQuantity" class="form-control" placeholder="Enter Booking quantity" required />
    </div>
 
    <div class="form-group">
        <label>UserId</label>
        <input type="text" asp-for="UservId" class="form-control" placeholder="Enter User Id" required />
    </div>
    <input type="submit" value="Save" class="btn btn-outline-success" /> @*submit display message for required option required works only with submit*@
    <input type="button" value="Reset" class="btn btn-outline-secondary" />
    <hr />
    @*submit sends form to server thats why we use submit not button type  *@
    @*   by default get request is called so we have mention post in the initial stage of form which will call httppost in Theatrecontroller *@
    @if (ViewBag.status == "Ok")
    {
        <div class="alert alert-success">
            @ViewBag.message
        </div>
    }
    else if (ViewBag.status == "Error")
    {
        <div class="alert alert-danger">
            @ViewBag.message
        </div>
    }
</form>