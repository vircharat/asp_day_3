@model BookTheShowEntity.Moviev


<h1>EditMovie</h1>
<div>
    <a asp-controller="Movie" asp-action="Index">Index</a>
    <hr />
</div>
<form method="post" enctype="multipart/form-data">

    <div class="form-group">
        @*  form group for automatic audjustment for various screen sizes*@
        <label>Movie Id</label>
        <input type="text" asp-for="MovievId" class="form-control" placeholder="Enter Movie Id" required />
    </div>
    <div class="form-group">
        @*  form group for automatic audjustment for various screen sizes*@
        <label>Movie Name</label>
        <input type="text" asp-for="MovievName" class="form-control" placeholder="Enter Movie Name" required />
    </div>
    <div class="form-group">
        <label>Movie Description</label>
        <input type="text" asp-for="MovievDesc" class="form-control" placeholder="Enter Movie Description" required />
    </div>
    <div class="form-group">
        <label>Movie Type</label>
        <input type="text" asp-for="MovievType" class="form-control" placeholder="Enter Movie Type" required />
    </div>
    <input type="submit" value="Save" class="btn btn-outline-success" /> @*submit display message for required option required works only with submit*@
    <input type="button" value="Reset" class="btn btn-outline-secondary" />
    <hr />
    @*submit sends form to server thats why we use submit not button type  *@
    @*   by default get request is called so we have mention post in the initial stage of form which will call httppost in moviecontroller *@
    @if (ViewBag.status == "Ok")
    {
        <div class="alert alert-success">
            @ViewBag.message
        </div>
    }
    else if (ViewBag.status == "Error")
    {
        <div class="alert alert-danger">
            @ViewBag.message
        </div>
    }
</form>
